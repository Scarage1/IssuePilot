# IssuePilot Environment Configuration
# Copy this file to .env and fill in your values

# OpenAI Configuration (Required)
OPENAI_API_KEY=your_openai_api_key_here

# GitHub Configuration (Optional - for higher rate limits)
GITHUB_TOKEN=your_github_token_here

# AI Provider Settings
AI_PROVIDER=openai
MODEL=gpt-4o-mini

# Application Settings
DEBUG=false
LOG_LEVEL=INFO

# Caching Configuration
CACHE_TTL=300
CACHE_MAX_SIZE=100

# Database Configuration (Optional)
# Set to enable persistent storage of analysis results
# SQLite: sqlite:///./issuepilot.db
# PostgreSQL: postgresql://user:password@localhost/issuepilot
DATABASE_URL=

# GitHub Rate Limit Retry Settings
GITHUB_MAX_RETRIES=3
GITHUB_RETRY_DELAY=1.0

# Duplicate Detection Settings
SIMILARITY_THRESHOLD=0.75
USE_EMBEDDINGS=true

# GitHub Webhook Configuration (Optional)
# Set up webhooks to auto-analyze issues when they're created/updated
# Generate a random secret: openssl rand -hex 32
GITHUB_WEBHOOK_SECRET=

# Webhook behavior settings
WEBHOOK_AUTO_ANALYZE_OPEN=true
WEBHOOK_AUTO_ANALYZE_EDIT=false
WEBHOOK_AUTO_ANALYZE_LABEL=false
WEBHOOK_REQUIRED_LABEL=
WEBHOOK_EXCLUDED_LABELS=
